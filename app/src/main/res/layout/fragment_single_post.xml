<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.SinglePostFragment">

    <ImageView
        android:id="@+id/single_post_photo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        tools:src="@drawable/default_photo"
        android:layout_marginTop="@dimen/vertical_large_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/register_image_content_description"/>

    <TextView
        android:id="@+id/single_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/single_post_description"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/normalText"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/single_post_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>